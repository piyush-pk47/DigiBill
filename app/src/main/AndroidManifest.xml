<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digibill">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigiBill"
        android:usesCleartextTraffic="true">

        <activity android:name=".IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".inovice_activity" />
        <activity android:name=".addInCart" />
        <activity android:name=".register" />
        <activity android:name=".MainActivity" />
        <activity android:name=".firebaseshow" />
        <activity android:name=".updShowStock" />
        <activity android:name=".showItem" />
        <activity android:name=".ShowStock" />
        <activity android:name=".EditItem" />
        <activity android:name=".login"/>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>